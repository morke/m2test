<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.content">

            <block class="Morke\CrazyForm\Block\CrazyForm" name="CrazyForm" before="-" template="Morke_CrazyForm::home_form.phtml" cacheable="false">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">

                                <item name="CrazyForm" xsi:type="array">
                                    <item name="component" xsi:type="string">Morke_CrazyForm/js/CrazyForm</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Morke_CrazyForm/CrazyFormTemplate</item>
                                    </item>

                                    <item name="children" xsi:type="array">
                                        <item name="form.input" xsi:type="array">
                                            <item name="component" xsi:type="string">Magento_Ui/js/form/element/abstract</item>
                                            <item name="displayArea" xsi:type="string">progressBar</item>
                                            <item name="placeholder" xsi:type="string">asdf</item>
                                            <item name="dataScope" xsi:type="string">CrazyForm.text_field</item>
                                            <item name="customScope" xsi:type="string">CrazyForm</item>
                                            <item name="config" xsi:type="array">
                                                <!--<item name="template" xsi:type="string">ui/form/field</item>-->
                                                <item name="template" xsi:type="string">ui/form/element/input</item>
                                                <item name="elementTmpl" xsi:type="string">ui/form/element/input</item>
                                            </item>
                                            <item name="validation" xsi:type="array">
                                                <item name="required-entry" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                        <item name="checkbox_field" xsi:type="array">
                                            <item name="component" xsi:type="string">Magento_Ui/js/form/element/boolean</item>
                                            <item name="displayArea" xsi:type="string">progressBar</item>
                                            <item name="config" xsi:type="array">
                                                <!--customScope is used to group elements within a single form (e.g. they can be validated separately)-->
                                                <item name="customScope" xsi:type="string">CrazyForm</item>
                                                <item name="template" xsi:type="string">ui/form/element/checkbox</item>
                                            </item>

                                            <item name="dataScope" xsi:type="string">CrazyForm.checkbox_field</item>
                                            <item name="label" xsi:type="string" translate="true">Checkbox Field</item>
                                        </item>
                                        <item name="select_field" xsi:type="array">
                                            <item name="component" xsi:type="string">Morke_CrazyForm/js/SelectCountry</item>
                                            <item name="displayArea" xsi:type="string">progressBar</item>
                                            <item name="config" xsi:type="array">
                                                <!--customScope is used to group elements within a single form (e.g. they can be validated separately)-->
                                                <item name="customScope" xsi:type="string">CrazyForm</item>
                                                <item name="template" xsi:type="string">ui/form/element/select</item>
                                            </item>
                                            <item name="filterBy" xsi:type="array">
                                                <item name="target" xsi:type="string"><![CDATA[${ $.provider }:${ $.parentScope }.country_id]]></item>
                                                <item name="field" xsi:type="string">country_id</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>

                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
